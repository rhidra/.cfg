[global/wm]
margin-top = 5
margin-bottom = 5

[bar/example]
monitor = ${env:MONITOR:}
width = 100%
height = 38
offset-x = 0
offset-y = 0

background = ${colors.background}
foreground = ${colors.foreground}

;overline-size = 2
;overline-color = #f00
;underline-size = 4
;underline-color = #00f

;border-size = 4
;border-bottom-size = 4
;border-color = ${colors.border}
;border-bottom-color = ${self.border-color}

padding-left = 3
padding-right = 3
module-margin-left = 1
module-margin-right = 4

font-0 = System San Francisco:pixelsize=11
;font-0 = Inconsolata-Regular:size=10
font-1 = unifont:fontformat=truetype:size=6:heavy;-2
font-2 = siji:pixelsize=12
font-3 = FontAwesome:size=12

;modules-left = music sound_volume brightness
modules-left = sound_volume brightness music_spotify
modules-center = i3
modules-right = title battery wlan date

tray-position = left
tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

wm-restack = i3

;override-redirect = true

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
format-foreground = ${colors.foreground}
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-background = ${colors.primary}

label-focused = %icon%
label-focused-background = ${colors.focus}
label-focused-underline= ${colors.primary}
label-focused-padding = 4

label-unfocused = %icon%
label-unfocused-padding = 2

label-urgent = %icon%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-visible = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

fuzzy-match = true

ws-icon-0 = 0;
ws-icon-1 = 1;
ws-icon-2 = 2;
ws-icon-3 = 3;♪
ws-icon-4 = 4;
;ws-icon-4 = 4;
;ws-icon-4 = 4;
ws-icon-5 = 5;
ws-icon-default = ?

[module/title]
type = internal/xwindow
format-padding = 4
format-foreground = ${colors.green-blue}
label-maxlen = 50

[module/music]
type = custom/script
exec = $HOME/.config/player_controller/player_control.py status 2> /dev/null
interval = 1
format-foreground = ${colors.green-blue}
scroll-up = mpc seek +1%
scroll-down = mpc seek -1%
click-right = $HOME/.config/player_controller/player_control.py next
click-left = $HOME/.config/player_controller/player_control.py prev

[module/music_spotify]
type = custom/script
exec = $HOME/.config/polybar/music_spotify.sh
interval = 1
click-right = playerctl next
click-left = playerctl previous

format-foreground = ${colors.blue}
format-underline = ${colors.primary}

[module/brightness]
type = custom/script
exec = echo $(light)
interval = 1
scroll-down = light -U 4
scroll-up = light -A 4

format =  <label>
format-underline = ${colors.primary}
format-foreground = ${colors.red}

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected =  <label-connected>
format-connected-underline = ${colors.background}
format-disconnected-underline = ${self.format-connected-underline}
format-connected-foreground = ${colors.purple}
format-disconnected-foreground = ${colors.purple}

label-connected = %essid%
label-disconnected = disconnected
label-disconnected-foreground = ${colors.gray}

[module/date]
type = internal/date
interval = 1

format =  <label>

date = "%d / %m / %Y"
date-alt = "%d / %m / %Y |"

time = "%H:%M"
time-alt = "| %H : %M : %S"

;format-prefix = 
format-prefix-foreground = ${colors.gray}
format-underline = #0a6cf5
format-foreground = ${colors.orange}

label = %date% %time%

; Display the volume in a simpler way than the default volume module
[module/sound_volume]
type = custom/script
exec = $HOME/.config/polybar/sound.sh
interval = 1
format-foreground = ${colors.green}
scroll-up = amixer -D pulse sset Master 2%+
scroll-down = amixer -D pulse sset Master 2%-

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.ok}
format-charging-foreground = ${colors.yellow}
label-charging = %percentage%

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${colors.warning}
format-discharging-foreground = ${colors.yellow}
label-discharging = %percentage%

format-full =  <label-full>
format-full-underline = ${colors.ok}
format-full-foreground = ${colors.yellow}
label-full = %percentage%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 600

