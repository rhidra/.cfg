[colors]
background = #4c566a
background-alt = #444
foreground = #e5e9f0
foreground-alt = #55
primary = #1c19c4
secondary = #e60053
alert = #bd2c40
ok = #36dd23
warning = #ffb52a
border = #5e81ac

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/bar]
monitor = ${env:MONITOR:}
width = 100%
height = 32
offset-x = 0
offset-y = 0

;background = ${xrdb:color9}
background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
overline-color = #f00
underline-size = 4
underline-color = #00f

border-size = 4
border-bottom-size = 4
border-color = ${colors.border}
border-bottom-color = ${self.border-color}

padding-left = 0
padding-right = 3
module-margin-left = 1
module-margin-right = 8

font-0 = fixed:pixelsize=12
font-1 = unifont:fontformat=truetype:size=6:heavy;-2
font-2 = siji:pixelsize=12
font-3 = FontAwesome:size=12

modules-left = i3 xwindow
modules-center = music 
modules-right = brightness sound_volume wlan battery date powermenu

tray-position = right
tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff

;wm-restack = bspwm
wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/arrow]
background to trans
type = custom/text
content = " "
content-foreground = #ffffff
content-background = #0

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = #FFFF00
label-mode-background = ${colors.primary}

label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-unfocused = %icon%
label-unfocused-padding = 2 

label-urgent = %icon%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2 

label-visible = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

fuzzy-match = true

ws-icon-0 = 0;?
ws-icon-1 = 1;
ws-icon-2 = 2;
ws-icon-3 = 3;
ws-icon-4 = 4;
ws-icon-5 = 5;♪
ws-icon-default = ?

[module/music]
type = custom/script
exec = $HOME/.config/polybar/music.sh 
interval = 1

format-underline = ${colors.primary}

[module/brightness]
type = custom/script
exec = echo $(acpilight -get)
interval = 1

format =  <label>
format-underline = ${colors.primary}

[module/wlan]
type = internal/network
interface = wlp3s0 
interval = 3.0

format-connected =  <label-connected>
format-connected-underline = ${colors.background}
format-disconnected-underline = ${self.format-connected-underline}

label-connected = %essid%
label-disconnected = disconnected
label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 1

format =  <label>

date = "%d / %m / %Y"
date-alt = "%d / %m / %Y |"

time = "%H:%M"
time-alt = "| %H : %M : %S"

;format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

label = %date% %time%

; Display the volume in a simpler way than the default volume module
[module/sound_volume]
type = custom/script
exec = $HOME/.config/polybar/sound.sh 
interval = 1

format-underline = ${colors.primary}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.ok}
label-charging = %percentage%

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${colors.warning} 
label-discharging = %percentage%

format-full =  <label-full>
format-full-underline = ${colors.ok}
label-full = %percentage%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 600

